<% if user.exp >= 0 && user.exp < 20 %>
  <%= image_tag("bean/bean_2.png", width: 150, height: 150) %>
<% elsif user.exp < 50 && user.exp >= 20 %>
  <%= image_tag("bean/bean_3.png", width: 150, height: 150) %>
<% elsif user.exp < 100 && user.exp >= 50 %>
  <%= image_tag("bean/bean_4.png", width: 150, height: 150) %>
<% elsif user.exp < 150 && user.exp >= 100 %>
  <%= image_tag("bean/bean_5.png", width: 150, height: 150) %>
<% elsif user.exp < 200 && user.exp >= 150 %>
  <%= image_tag("bean/bean_6.png", width: 150, height: 150) %>
<% elsif user.exp < 250 && user.exp >= 200 %>
  <%= image_tag("bean/bean_7.png", width: 150, height: 150) %>
<% elsif user.exp < 300 && user.exp >= 250 %>
  <%= image_tag("bean/bean_8.png", width: 150, height: 150) %>
<% elsif user.exp < 350 && user.exp >= 300 %>
  <%= image_tag("bean/bean_9.png", width: 150, height: 150) %>
<% elsif user.exp < 400 && user.exp >= 350 %>
  <%= image_tag("tomato/tomato1.png", width: 300, height: 300) %>
<% elsif user.exp < 450 && user.exp >= 400 %>
  <%= image_tag("tomato/tomato2.png", width: 150, height: 150) %>
<% elsif user.exp < 500 && user.exp >= 450 %>
  <%= image_tag("tomato/tomato3.png", width: 150, height: 150) %>
<% elsif user.exp < 550 && user.exp >= 500 %>
  <%= image_tag("tomato/tomato4.png", width: 300, height: 300) %>
<% else %>
  <%= image_tag("tomato/tomato5.png", width: 150, height: 150) %>
<% end %>
